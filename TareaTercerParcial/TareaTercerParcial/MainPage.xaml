<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaTercerParcial.MainPage">

    <StackLayout>

        <StackLayout Margin="-20,10,0,0" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button x:Name="btnEmpleados" Text="Registrar un Empleado" Clicked="btnEmpleados_Clicked"  HeightRequest="50" CornerRadius="30" FontAttributes="Bold" TextColor="White" BackgroundColor="CornflowerBlue"  />
        </StackLayout>
        <StackLayout Margin="-20,10,0,0" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button x:Name="btnListaEmpleados" Text="Ver lista de Empleados" Clicked="btnListaEmpleados_Clicked" WidthRequest="180" HeightRequest="60" CornerRadius="30" FontAttributes="Bold" TextColor="White" BackgroundColor="CornflowerBlue"/>
        </StackLayout>
    </StackLayout>


</ContentPage>
